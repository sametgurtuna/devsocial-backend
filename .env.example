# DevSocial Backend Configuration

# Server
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
CORS_ORIGINS=http://localhost:*,vscode-webview://*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (kullanıcı API anahtarlarını yönetmek için)
ADMIN_API_KEY=your-admin-api-key-here

# Sosyal Medya Entegrasyonları (opsiyonel)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Veritabanı (şimdilik in-memory, ileride eklenebilir)
# DATABASE_URL=mongodb://localhost:27017/devsocial
# DATABASE_URL=postgresql://user:password@localhost:5432/devsocial

# Gizlilik Ayarları
MAX_HEARTBEATS_PER_SYNC=1000
DATA_RETENTION_DAYS=30
